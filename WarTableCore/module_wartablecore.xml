<?xml version="1.0" encoding="UTF-8"?>
<project name="module_wartablecore" default="compile.module.wartablecore">
  <dirname property="module.wartablecore.basedir" file="${ant.file.module_wartablecore}"/>
  
  <property name="module.jdk.home.wartablecore" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.wartablecore" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.wartablecore" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.wartablecore" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="wartablecore.output.dir" value="${module.wartablecore.basedir}/../out/production/WarTableCore"/>
  <property name="wartablecore.testoutput.dir" value="${module.wartablecore.basedir}/../out/test/WarTableCore"/>
  
  <path id="wartablecore.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="wartablecore.module.production.classpath">
    <path refid="${module.jdk.classpath.wartablecore}"/>
    <path refid="library._libs.classpath"/>
  </path>
  
  <path id="wartablecore.runtime.production.module.classpath">
    <pathelement location="${wartablecore.output.dir}"/>
    <path refid="library._libs.classpath"/>
  </path>
  
  <path id="wartablecore.module.classpath">
    <path refid="${module.jdk.classpath.wartablecore}"/>
    <pathelement location="${wartablecore.output.dir}"/>
    <path refid="library._libs.classpath"/>
  </path>
  
  <path id="wartablecore.runtime.module.classpath">
    <pathelement location="${wartablecore.testoutput.dir}"/>
    <pathelement location="${wartablecore.output.dir}"/>
    <path refid="library._libs.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.wartablecore">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.wartablecore">
    <patternset refid="excluded.from.module.wartablecore"/>
  </patternset>
  
  <path id="wartablecore.module.sourcepath">
    <dirset dir="${module.wartablecore.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.wartablecore" depends="compile.module.wartablecore.production,compile.module.wartablecore.tests" description="Compile module WarTableCore"/>
  
  <target name="compile.module.wartablecore.production" depends="register.custom.compilers" description="Compile module WarTableCore; production classes">
    <mkdir dir="${wartablecore.output.dir}"/>
    <javac2 destdir="${wartablecore.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.wartablecore}/javac">
      <compilerarg line="${compiler.args.wartablecore}"/>
      <bootclasspath refid="wartablecore.module.bootclasspath"/>
      <classpath refid="wartablecore.module.production.classpath"/>
      <src refid="wartablecore.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.wartablecore"/>
    </javac2>
    
    <copy todir="${wartablecore.output.dir}">
      <fileset dir="${module.wartablecore.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.wartablecore.tests" depends="register.custom.compilers,compile.module.wartablecore.production" description="compile module WarTableCore; test classes" unless="skip.tests"/>
  
  <target name="clean.module.wartablecore" description="cleanup module">
    <delete dir="${wartablecore.output.dir}"/>
    <delete dir="${wartablecore.testoutput.dir}"/>
  </target>
</project>